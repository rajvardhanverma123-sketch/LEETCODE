// The API isBadVersion is defined for you.
// bool isBadVersion(int version);

class Solution {
public:
    int firstBadVersion(int n) {
        int l=1,h=n,mid,r;
        while(l<=h){
            mid=h+(l-h)/2;
            if(isBadVersion(mid)==true){r=mid; h=mid-1;}
            else l=mid+1;
        }
        return r;
    }
};
